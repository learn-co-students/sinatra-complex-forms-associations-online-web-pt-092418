<h1>Update Pet</h1>

<form action="/pets/<%= @pet.id %>" method="POST">
  <input id="hidden" type="hidden" name="_method" value="patch">

  <label>Name:</label>
  <input id="pet_name" type="text" name="pet[name]" value="<%= @pet.name %>">

  <br>

  <%@owners.each do |owner|%>

    <input type="radio" name="pet[owner_id]" id="<%=owner.id%>" value="<%=owner.id%>" <%='checked' if @pet.owner_id == owner.id %>><%=owner.name%></input>
  <%end%>

  <br>

  <input id="owner_name" type="text" name="owner[name]">

  <br>

  <input type="submit" value="Update Pet">

</form>
